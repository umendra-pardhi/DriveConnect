    .mobile-menu-btn {
      display: none;
      background: var(--gradient-blue);
      color: var(--white);
      border: none;
      border-radius: 8px;
      padding: 8px;
      cursor: pointer;
      transition: all 0.3s ease;
    }
    
    .mobile-menu-btn:hover {
      transform: scale(1.1);
    }
    
    .chart-container {
      position: relative;
      height: 300px;
      margin-top: 1rem;
    }
    
    @media (max-width: 1024px) {
      .sidebar {
        width: 240px;
      }
      
